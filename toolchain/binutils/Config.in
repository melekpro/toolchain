# Choose binutils version.

choice
	prompt "Binutils Version"
	default BINUTILS_VERSION_2_23_2
	help
	  Select the version of binutils you wish to use.

	config BINUTILS_VERSION_2_19_1
		bool "binutils 2.19.1"

	config BINUTILS_VERSION_2_21_1
		bool "binutils 2.21.1"

	config BINUTILS_VERSION_2_23_2
		bool "binutils 2.23.2"

	config BINUTILS_VERSION_2_24
		bool "binutils 2.24"

endchoice

config EXTRA_BINUTILS_CONFIG_OPTIONS
	string
	prompt "Additional binutils options"
	default ""
	help
	    Any additional binutils options you may want to include....

config BINUTILS_VERSION
	string
	default "2.19.1"          if BINUTILS_VERSION_2_19_1
	default "2.21.1"          if BINUTILS_VERSION_2_21_1
	default "2.23.2"          if BINUTILS_VERSION_2_23_2
	default "2.24"            if BINUTILS_VERSION_2_24
	default "2.23.2"
