# Choose uclibc version.

choice
	prompt "uClibc Version"
	default UCLIBC_VERSION_0_9_30
	help
	  Select the version of uClibc you wish to use.
	  Default is 0.9.30 .

	config UCLIBC_VERSION_SNAPSHOT
		depends !LINUX_2_4
		bool "uClibc snapshot"

	config UCLIBC_VERSION_0_9_29
		bool "uClibc 0.9.29"

	config UCLIBC_VERSION_0_9_30
		bool "uClibc 0.9.30"

	config UCLIBC_VERSION_0_9_32
		depends !LINUX_2_4
		bool "uClibc 0.9.32"
endchoice


config UCLIBC_ENABLE_DEBUG
	bool "Build with debug information"
	default n
